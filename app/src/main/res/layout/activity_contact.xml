<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ContactActivity">

    <EditText
        android:id="@+id/txtTitulo"
        android:layout_width="287dp"
        android:layout_height="51dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/design_input"
        android:ems="10"
        android:hint="Ingrese título del reclamo o sugerencia"
        android:inputType="textPersonName"
        android:padding="10dp"
        android:textAlignment="viewStart"
        android:textSize="14dp"
        app:layout_constraintBottom_toTopOf="@+id/txtDetalle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/txtNameOwner"
        android:layout_width="260dp"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:text="Ingrese sugerencia o reclamo :"
        android:textSize="16dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/txtTitulo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.417"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/txtDetalle"
        android:layout_width="287dp"
        android:layout_height="143dp"
        android:layout_marginBottom="32dp"
        android:background="@drawable/design_input"
        android:ems="10"
        android:gravity="start|top"
        android:hint="Cuéntanos en que podemos ayudar"
        android:inputType="textMultiLine"
        android:padding="10dp"
        android:textSize="14dp"
        app:layout_constraintBottom_toTopOf="@+id/btnSendContact"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="SpeakableTextPresentCheck" />

    <Button
        android:id="@+id/btnSendContact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="56dp"
        android:background="@drawable/design_actionbuttons"
        android:text="Enviar"
        android:textColor="#FFFFFF"
        android:textSize="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.541"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="355dp"
        android:layout_height="201dp"
        app:layout_constraintBottom_toTopOf="@+id/txtNameOwner"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/contact_doggy" />
</androidx.constraintlayout.widget.ConstraintLayout>