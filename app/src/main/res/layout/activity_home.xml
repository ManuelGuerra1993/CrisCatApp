<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/deg_background"
    tools:context=".Home">

    <ImageView
        android:id="@+id/img_logo"
        android:layout_width="109dp"
        android:layout_height="127dp"
        android:focusableInTouchMode="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.844"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.152"
        app:srcCompat="@drawable/criscatapp_wb"
        tools:ignore="SpeakableTextPresentCheck" />

    <Button
        android:id="@+id/btn_pet"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="125dp"
        android:layout_height="169dp"
        android:layout_marginStart="20dp"
        android:background="#4D6B78"
        android:drawableTop="@drawable/ic_pet_house"
        android:drawablePadding="10dp"
        android:paddingTop="30dp"
        android:text="MASCOTAS"
        android:textAlignment="gravity"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/btn_fares"
        app:layout_constraintEnd_toStartOf="@+id/btn_dates"
        app:layout_constraintHorizontal_bias="0.691"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.946"
        app:layout_constraintWidth_default="wrap" />

    <Button
        android:id="@+id/btn_dates"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="125dp"
        android:layout_height="169dp"
        android:layout_marginTop="296dp"
        android:layout_marginEnd="60dp"
        android:background="#343F4B"
        android:drawableTop="@drawable/ic_baseline_calendar_today_24"
        android:paddingTop="40dp"
        android:text="CITAS"
        android:textAlignment="gravity"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_default="wrap" />

    <Button
        android:id="@+id/btn_fares"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="125dp"
        android:layout_height="169dp"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="80dp"
        android:background="#8E8E8E"
        android:drawableTop="@drawable/ic_budget"
        android:drawablePadding="10dp"
        android:paddingTop="20dp"
        android:text="TARIFAS DE SERVICIO"
        android:textAlignment="gravity"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btn_contact"
        app:layout_constraintHorizontal_bias="0.658"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintWidth_default="wrap"
        tools:ignore="TextContrastCheck" />

    <Button
        android:id="@+id/btn_contact"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="125dp"
        android:layout_height="169dp"
        android:layout_marginEnd="60dp"
        android:layout_marginBottom="80dp"
        android:background="#969FAA"
        android:drawableTop="@drawable/ic_contact_form"
        android:drawablePadding="0dp"
        android:paddingTop="20dp"
        android:text="SUGERENCIAS Y/O RECLAMOS"
        android:textAlignment="gravity"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintWidth_default="wrap"
        tools:ignore="TextContrastCheck" />

    <EditText
        android:id="@+id/txt_welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="208dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Bienvenido !"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>